{
  "name": "postcss-merge-at-rules",
  "version": "0.0.1",
  "description": "PostCSS plugin for merging and nesting CSS at rules",
  "keywords": [
    "postcss",
    "postcss-plugin",
    "css",
    "css-optimizations",
    "at-rules",
    "responsive-css",
    "merge-at-rules"
  ],
  "author": "Victor Saa <vis97c@outlook.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vis97c/postcss-merge-at-rules.git"
  },
  "bugs": {
    "url": "https://github.com/vis97c/postcss-merge-at-rules/issues"
  },
  "homepage": "https://github.com/vis97c/postcss-merge-at-rules",
  "scripts": {
    "postcss": "postcss test/default.in.css -o test/default.out.css --no-map",
    "lint": "eslint --ext .js --ignore-path .prettierignore .",
    "test": "jest-ci --coverage",
    "test:lint": "yarn lint && yarn test",
    "refresh-deps": "rm -rf node_modules && rm package-lock.json && npm i"
  },
  "packageManager": "yarn@1.22.21",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "sort-css-media-queries": "2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@types/jest": "^29.5.2",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsdoc": "^46.2.5",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-ci": "^0.1.1",
    "jest-cli": "^27.3.1",
    "lint-staged": "^13.2.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^8.3.1",
    "prettier": "^3.0.0",
    "semantic-release": "^17.1.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-prettier": "^4.0.0"
  },
  "peerDependencies": {
    "postcss": "^8.4.38"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  }
}
